		//	Пока ВыборкаДетальныеЗаписи.Следующий() Цикл
		//		Сообщить("Не хватает материалов " + ВыборкаДетальныеЗаписи.Номенклатура + ", в количестве " + (- ВыборкаДетальныеЗаписи.КоличествоОстаток));
		//	КонецЦикла;
		//КонецЕсли;
	КонецЕсли;
	
	//}}__КОНСТРУКТОР_ДВИЖЕНИЙ_РЕГИСТРОВ
